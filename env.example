# --- CONFIGURACIÓN BÁSICA DE LA APP ---
APP_NAME="Lucy AMS"
APP_ENV=local
# La APP_KEY se llenará sola cuando corras el comando de nuevo
APP_KEY=
APP_DEBUG=true
APP_TIMEZONE=America/Argentina/Cordoba
APP_URL=http://localhost:8084

# --- DOCKER (Tus IDs de la Inspiron) ---
DOCKER_USER_ID=1000
DOCKER_GROUP_ID=1000

# --- LOGS (Para desarrollo usamos daily) ---
LOG_CHANNEL=daily
LOG_LEVEL=debug

# --- BASE DE DATOS (Conectando al contenedor 'db') ---
DB_CONNECTION=mysql
DB_HOST=db
DB_PORT=3306
DB_DATABASE=lucy
DB_USERNAME=root
DB_PASSWORD=root

# --- CACHE Y SESIONES (Usamos Redis para ser pro) ---
SESSION_DRIVER=redis
CACHE_STORE=redis
FILESYSTEM_DISK=local
QUEUE_CONNECTION=redis

# --- REDIS (Conectando al contenedor 'redis') ---
REDIS_CLIENT=phpredis
REDIS_HOST=redis
REDIS_PASSWORD=null
REDIS_PORT=6379

# --- MAIL (Interceptado por Mailpit en el 8025) ---
MAIL_MAILER=smtp
MAIL_HOST=mail
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="lucy@sial.com"
MAIL_FROM_NAME="${APP_NAME}"

